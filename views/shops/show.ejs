<% layout('layouts/boilerplate') %>
    <h1>
        <%= shop.name %>
    </h1>
    <h2>
        <%= shop.location %>
    </h2>
    <img src="<%= shop.image %>" alt="">
    <p>
        <%= shop.description %>
    </p>
    <p>
        <a href="/shops/<%= shop._id %>/edit">Edit</a>
    </p>
    <p>
    <form action="/shops/<%= shop._id %>?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>
    </p>
    <footer>
        <a href="/shops">All Shops</a>
    </footer>